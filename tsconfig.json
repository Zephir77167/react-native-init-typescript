{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "noEmit": true,
    "pretty": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "types": [
    "react",
    "react-native",
    "jest"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "android",
    "ios",
    "build",
    "node_modules"
  ]
}
